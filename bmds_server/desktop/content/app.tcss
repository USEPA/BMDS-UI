.main {
    overflow-y: scroll;
}

Button {
    width: 30;
    height: 5;
    margin: 1;
    padding: 1;
    border: heavy white;
}

Button.btn-auto {
    width: auto;
    height: auto;
}

Button.btn-config{
    width:5;
    height:3;
    margin:-1 -1 -1 -1;
    padding:0;
    border: none;
}

.zzz{
    height: 100%
}


.save {
    background: $primary 50%;
}

.cancel {
    background: $secondary 50%;
}

#log {
    height: 15;
}

#tabs {
    margin: 0 5;
    background: $boost;
}

.app {
    layout: horizontal;
}

.app-box {
    padding: 0 1;
    margin: 1;
    border: double grey;
    width: 70;
    height: 10;
    overflow: auto;
}

.config-tab {
    /*  */
    height: 40;
}

.dir-container {
    margin: 1;
    border: double grey;
    width: 70;
    height: 30;
    overflow: auto;
    background: $panel;
}


.fn-container {
    margin: 1;
    border: double grey;
    width: 70;
    height: 30;
    background: $panel;
}

.config-btns {
    align: center top;
    width: auto;
}


.save-btns {
    align: center top;
}

.selected-disp {
    border: ascii gray;
    background: $boost;
}

Input.-valid {
    border: ascii $success 60%;
}

Input.-valid:focus {
    border: ascii $success;
}